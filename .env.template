# Authentication (Privy)
NEXT_PUBLIC_PRIVY_APP_ID=                        # Get from https://dashboard.privy.io
PRIVY_APP_SECRET=                                 # Secret key from Privy dashboard

# ZeroDev Smart Accounts (Kernel V3)
ZERODEV_PROJECT_ID=                              # Get from https://dashboard.zerodev.app
ZERODEV_BUNDLER_URL=                             # Optional: Custom bundler URL (defaults to ZeroDev's)

# Chain configuration
NEXT_PUBLIC_CHAIN_ID=base                        # Production: base | Testnet: base-sepolia
NEXT_PUBLIC_USDC_MINT=0x833589fCD6eDb6E08f4c7C32d4f71b54bdA02913  # Mainnet USDC | Sepolia: 0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Database (Neon Postgres)
DATABASE_URL=                                     # postgresql://user:pass@host/db

# Autonomous Agent Configuration (Session Keys)
CRON_SECRET=                                      # 32-char random string for cron authentication (generate with: openssl rand -hex 32)
AGENT_SIMULATION_MODE=true                        # Set to 'true' for testing without real transactions
AGENT_MIN_APY_THRESHOLD=0.005                     # Global minimum APY improvement (0.5%)

# Optional: Coinbase (for fiat on-ramp, if not using Crossmint)
NEXT_PUBLIC_COINBASE_APP_ID=
COINBASE_API_KEY_ID=
COINBASE_API_KEY_SECRET=

